{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "strictNullChecks": true,
    "declarationDir": "src",
  },
  "files": ["src/index.ts"]
}
